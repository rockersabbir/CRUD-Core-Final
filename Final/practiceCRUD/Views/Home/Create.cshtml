@model practiceCRUD.ViewModel.StudentCreateViewModel

<div class="container">
    <form method="post" asp-action="Create" asp-controller="Home">
        <div class="form-group row">
            <label asp-for="StudentName" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="StudentName" placeholder="Name" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SchoolID" class="col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="SchoolID" asp-items="@Model.schoolList"></select>
            </div>
        </div>
        <div class="form-group row col-md-2">
            <button type="submit" class="btn btn-outline-success">Create</button>
        </div>
    </form>
</div>